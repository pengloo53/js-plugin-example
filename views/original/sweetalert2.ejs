<% include ../layout/head.ejs %>
<!-- sweetalert2 -->
<link rel="stylesheet" href="/sweetalert2/dist/sweetalert2.min.css">

<% include ../layout/header.ejs %>
<div class="container">
  <% include ../layout/pageHeader.ejs %>
  <div class="row">
    <div class="col-lg-6">
      <ul class="list-group ">
        <li class="list-group-item">浏览器默认：
          <a href="javascript:void(0)" class="_alert">弹窗</a> · 
          <a href="javascript:void(0)" class="_confirm">确认</a>
        </li>
        <li class="list-group-item">基础信息框：
          <a href="javascript:void(0)" class="basic" data-modeltype="success">成功</a> · 
          <a href="javascript:void(0)" class="basic" data-modeltype="error">错误</a> · 
          <a href="javascript:void(0)" class="basic" data-modeltype="info">信息</a> · 
          <a href="javascript:void(0)" class="basic" data-modeltype="warning">警告</a> · 
          <a href="javascript:void(0)" class="basic" data-modeltype="question">问题</a>
        </li>
        <li class="list-group-item">复杂信息框：
          <a href="javascript:void(0)" class="disappear">自动消失框</a> · 
          <a href="javascript:void(0)" class="dialog">对话框</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<!-- jQuery 3 -->
<script src="/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- sweetalert2 -->
<script src="/sweetalert2/dist/sweetalert2.all.min.js"></script>

<script>
  $(function () {
    // 默认弹窗
    $('a._alert').click(function () {
      alert('默认弹出框');
    });

    // 默认确认窗
    $('a._confirm').click(function () {
      if(confirm("Are you sure?")){
        alert('必须');
      }else{
        alert('我再想想');
      }
    });
    
    // 基础信息窗
    $('a.basic').click(function(){
      var modeltype = $(this).data("modeltype");
      swal(
        'Good job!',
        'You clicked the button!',
        modeltype
      )
    });

    // 自动消失窗
    $('a.disappear').click(function(){
      swal({
        type: 'warning',
        title: 'Auto close alert!',
        text: 'I will close in 2 seconds.',
        timer: 2000
      })
    });

    // 对话窗
    $('a.dialog').click(function(){
      swal({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        type: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!',
        cancelButtonText: 'No, cancel!',
        // confirmButtonClass: 'btn btn-success btn-sm',
        // cancelButtonClass: 'btn btn-danger btn-sm',
        // buttonsStyling: false
      }).then(function (isConfirm) {
        console.log(isConfirm);
        if (isConfirm.value === true) {
          swal(
            'Deleted!',
            'Your file has been deleted.',
            'success'
          );
        } else if(isConfirm.dismiss === 'cancel') {
          swal(
            'Cancelled',
            'Your imaginary file is safe :)',
            'error'
          );
        }
      })
    });
  });
</script>
